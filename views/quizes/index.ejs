<form method="GET" action="quizes?search=search">
	<input type="text" placeholder="Escriba aquÃ­" name="search">
	<input type="submit" value="Buscar">
</form>
<% if(quizes.length > 0){ %>
<table>
	<tr>
		<td>Pregunta</td>
		<td>Tema</td>
		<td>Opciones</td>
	</tr>
	<% var i; for(i = 0; i < quizes.length; i++){ %>
		<tr>
			<td>
				<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
			</td>
			<td> <%= quizes[i].tema %> </td>
			<td>
				<a href="quizes/<%= quizes[i].id %>/edit"><button type="button">editar</button></a>
			</td>
			<td>
		    	<form method="POST" action="quizes/<%= quizes[i].id %>?_method=delete">
		          <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
		            borrar
		          </button>
		        </form>
		    </td>
		</tr>
	<% } %>
<% }else{ %>
	<br>
	<h3>No existen preguntas</h3>
<% } %>
</table>
<br>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>